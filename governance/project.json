{
    "name": "governance",
    "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
    "root": "governance",
    "projectType": "library",
    "targets": {
        "memorize": {
            "executor": "nx:run-commands",
            "options": {
                "command": "node ./.cortex/commands/memorize.mjs $TASK_SLUG"
            },
            "outputs": [
                "{homedir}/.Cortex-OS/tasks/*/logs/memorize"
            ]
        },
        "arc:close": {
            "executor": "nx:run-commands",
            "dependsOn": [
                {
                    "target": "test",
                    "projects": "*"
                },
                {
                    "target": "lint",
                    "projects": "*"
                },
                {
                    "target": "typecheck",
                    "projects": "*"
                }
            ],
            "options": {
                "command": "nx run governance:memorize"
            }
        }
    },
    "tags": [
        "scope:governance",
        "type:ops"
    ]
}