{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://governance.example.com/schemas/agentic-config.schema.json",
  "title": "brAInwav Governance Config",
  "description": "Configures local governance profiles, identity hints, and overlay declarations for consumer repositories.",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "default": "1.0"
    },
    "profile": {
      "type": "string",
      "enum": [
        "creative",
        "delivery",
        "release",
        "core",
        "full"
      ],
      "default": "release"
    },
    "mode": {
      "type": "string",
      "enum": [
        "pointer",
        "full"
      ],
      "default": "pointer"
    },
    "packs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "packOptions": {
      "type": "object",
      "additionalProperties": true
    },
    "identity": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "serviceName": {
          "type": "string"
        },
        "brand": {
          "type": "string"
        },
        "logPrefix": {
          "type": "string"
        }
      }
    },
    "overlays": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "paths"
        ],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "paths": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          },
          "allowWeaken": {
            "type": "boolean",
            "default": false
          }
        }
      }
    },
    "mergeStrategy": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
