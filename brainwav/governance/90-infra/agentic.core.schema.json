{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://governance.example.com/schemas/agentic.core.schema.json",
  "title": "Agentic Governance Pack",
  "description": "Canonical schema for validation of the generated governance pack consumed by projects and workers.",
  "type": "object",
  "required": [
    "metadata",
    "workflow",
    "limits",
    "evidence",
    "assurance",
    "qualityGates",
    "structure",
    "checklists",
    "governance"
  ],
  "properties": {
    "metadata": {
      "type": "object",
      "required": [
        "schemaVersion",
        "packVersion",
        "generatedAt"
      ],
      "properties": {
        "schemaVersion": {
          "type": "string"
        },
        "packVersion": {
          "type": "string"
        },
        "generatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "sourceShas": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "workflow": {
      "type": "object",
      "required": [
        "phases",
        "gates",
        "flows",
        "transitions"
      ],
      "properties": {
        "phases": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "name",
              "description"
            ],
            "properties": {
              "id": {
                "type": "string",
                "enum": [
                  "R",
                  "G",
                  "F",
                  "REVIEW"
                ]
              },
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            }
          }
        },
        "gates": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "phase",
              "summary"
            ],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^G\\d+$"
              },
              "phase": {
                "type": "string",
                "enum": [
                  "R",
                  "G",
                  "F",
                  "REVIEW"
                ]
              },
              "summary": {
                "type": "string"
              },
              "evidence": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "checklists": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "blocks": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "flows": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "summary"
            ],
            "properties": {
              "id": {
                "type": "string",
                "enum": [
                  "feature",
                  "fix",
                  "refactor",
                  "research",
                  "review"
                ]
              },
              "summary": {
                "type": "string"
              },
              "phases": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "gates": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "gatesOptional": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "transitions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "from",
              "to",
              "requirements"
            ],
            "properties": {
              "from": {
                "type": "string",
                "enum": [
                  "R",
                  "G",
                  "F",
                  "REVIEW"
                ]
              },
              "to": {
                "type": "string",
                "enum": [
                  "R",
                  "G",
                  "F",
                  "REVIEW"
                ]
              },
              "requirements": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "limits": {
      "type": "object",
      "required": [
        "stepBudget",
        "askFirst"
      ],
      "properties": {
        "stepBudget": {
          "type": "integer",
          "minimum": 1
        },
        "askFirst": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "evidence": {
      "type": "object",
      "required": [
        "tripletRequired",
        "runManifestRequired",
        "requiredTokens"
      ],
      "properties": {
        "tripletRequired": {
          "type": "boolean"
        },
        "runManifestRequired": {
          "type": "boolean"
        },
        "requiredTokens": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "assurance": {
      "type": "object",
      "required": [
        "aegis",
        "timeFreshness"
      ],
      "properties": {
        "aegis": {
          "type": "object",
          "required": [
            "enabled",
            "requiredGates",
            "endpointEnv",
            "verdicts"
          ],
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "requiredGates": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "endpointEnv": {
              "type": "string"
            },
            "verdicts": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "timeFreshness": {
          "type": "object",
          "required": [
            "required",
            "anchorRules"
          ],
          "properties": {
            "required": {
              "type": "boolean"
            },
            "anchorRules": {
              "type": "string"
            },
            "allowedDrift": {
              "type": "string"
            }
          }
        }
      }
    },
    "qualityGates": {
      "type": "object",
      "required": [
        "coverage",
        "mutation",
        "a11y",
        "securityScanners",
        "supplyChain"
      ],
      "properties": {
        "coverage": {
          "type": "object",
          "required": [
            "global",
            "changedLines"
          ],
          "properties": {
            "global": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "changedLines": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            }
          }
        },
        "mutation": {
          "type": "object",
          "required": [
            "global"
          ],
          "properties": {
            "global": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            }
          }
        },
        "a11y": {
          "type": "object",
          "required": [
            "standard"
          ],
          "properties": {
            "standard": {
              "type": "string"
            }
          }
        },
        "securityScanners": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "supplyChain": {
          "type": "object",
          "properties": {
            "sbom": {
              "type": [
                "boolean",
                "string"
              ]
            },
            "slsa": {
              "type": "string"
            },
            "signing": {
              "type": [
                "boolean",
                "string"
              ]
            }
          }
        }
      }
    },
    "structure": {
      "type": "object",
      "required": [
        "importBoundaries",
        "snapshotValidation"
      ],
      "properties": {
        "importBoundaries": {
          "type": "object",
          "properties": {
            "forbidden": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "allowed": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "snapshotValidation": {
          "type": "object",
          "required": [
            "enabled",
            "snapshotFile"
          ],
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "snapshotFile": {
              "type": "string"
            }
          }
        }
      }
    },
    "checklists": {
      "type": "object",
      "required": [
        "items",
        "byPhase"
      ],
      "properties": {
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "description",
              "severity"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": [
                  "BLOCKER",
                  "MAJOR",
                  "MINOR"
                ]
              },
              "appliesTo": {
                "type": "object",
                "properties": {
                  "phases": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "gates": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "flows": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "roles": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "byPhase": {
          "type": "object",
          "properties": {
            "PLAN": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "IMPLEMENT": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "VERIFY": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "REVIEW": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "governance": {
      "type": "object",
      "required": [
        "precedence",
        "hashIndexPath",
        "requireHashVerification"
      ],
      "properties": {
        "precedence": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "infra": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "reference": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "hashIndexPath": {
          "type": "string"
        },
        "requireHashVerification": {
          "type": "boolean"
        }
      }
    },
    "profiles": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "overrides": {
            "type": "object"
          }
        }
      }
    }
  }
}
