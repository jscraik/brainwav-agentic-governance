{
  "name": "@brainwav/brainwav-agentic-governance",
  "version": "0.2.22",
  "private": false,
  "type": "module",
  "description": "Governance automation scripts and MCP helpers",
  "engines": {
    "node": ">=24.11.0 <25",
    "pnpm": ">=10.26.0 <11"
  },
  "packageManager": "pnpm@10.26.0",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jscraik/brainwav-agentic-governance"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "AGENTS.md",
    "AGENTS-GOVERNANCE.md",
    "CODESTYLE.md",
    "SECURITY.md",
    "README.md",
    ".github/ISSUE_TEMPLATE",
    ".github/pull_request_template.md",
    "brainwav/",
    "scripts/",
    ".agentic-governance/"
  ],
  "bin": {
    "brainwav-governance": "scripts/governance-cli.mjs",
    "brainwav-agentic-governance": "scripts/governance-cli.mjs",
    "ensure-tools": "scripts/ensure-tools.mjs",
    "cortex-governance-bootstrap": "scripts/cortex-governance-bootstrap.mjs",
    "readiness-check": "scripts/readiness-check.mjs",
    "oversight-vibe-check": "scripts/oversight-vibe-check.mjs"
  },
  "scripts": {
    "ensure:tools": "node scripts/ensure-tools.mjs",
    "cortex:governance-bootstrap": "node scripts/cortex-governance-bootstrap.mjs",
    "oversight:vibe-check": "node scripts/oversight-vibe-check.mjs",
    "readiness:check": "node scripts/readiness-check.mjs",
    "governance:sync-hashes": "node scripts/sync-governance-hashes.mjs",
    "governance:sync-hashes:check": "node scripts/sync-governance-hashes.mjs --check",
    "governance:install": "node scripts/governance-cli.mjs install",
    "governance:upgrade": "node scripts/governance-cli.mjs upgrade",
    "governance:doctor": "node scripts/governance-cli.mjs doctor",
    "task:scaffold": "node scripts/task-scaffold.mjs",
    "task:validate": "node scripts/task-validate.mjs",
    "governance:validate": "node scripts/governance-cli.mjs validate",
    "governance:validate-standards": "node scripts/validate-standards.mjs",
    "governance:check-nx": "node scripts/check-nx.mjs",
    "governance:validate-evidence": "node scripts/validate-task-evidence.mjs",
    "governance:bootstrap-consumer": "node scripts/bootstrap-consumer.mjs",
    "governance:generate-control-docs": "node scripts/generate-control-docs.mjs",
    "docs:generate-packs": "node scripts/generate-packs-docs.mjs",
    "commands:daily-summary": "node brainwav/governance/commands/daily-summary.mjs",
    "commands:memorize": "node brainwav/governance/commands/memorize.mjs",
    "commands:recall": "node brainwav/governance/commands/recall.mjs",
    "commands:docs-list": "node brainwav/governance/commands/docs-list.mjs",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ci": "eslint . --max-warnings 0",
    "test:cli": "node scripts/cli-tests.mjs",
    "test:fixtures": "node scripts/fixture-tests.mjs"
  },
  "dependencies": {
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "eslint-plugin-jsdoc": "^50.8.0",
    "typescript-eslint": "^8.51.0"
  }
}
