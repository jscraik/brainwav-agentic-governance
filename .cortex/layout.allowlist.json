{
	"allow": [
		"apps/**",
		"packages/**",
		"CONTEXT/**",
		"tools/**",
		"scripts/**",
		"docs/**",
		".github/**",
		".cortex/**",
		"configs/**",
		"examples/**",
		"tests/**",
		"LICENSE",
		"README.md",
		"pnpm-*.yaml",
		"package.json",
		"pnpm-workspace.yaml",
		"tsconfig*.json",
		".editorconfig",
		".gitignore",
		".gitattributes"
	],
	"deny": [
		"**/*.pem",
		"**/*.key",
		"**/*.p12",
		"**/.env",
		"**/.env.*",
		"**/secrets/**"
	],
	"ignore": [
		"**/node_modules/**",
		"**/.git/**",
		"**/.next/**",
		"**/dist/**",
		"**/build/**",
		"**/coverage/**",
		"**/.cache/**"
	],
	"exceptions": ["forbidden.js"]
}
