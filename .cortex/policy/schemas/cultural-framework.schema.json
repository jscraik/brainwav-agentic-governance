{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cortex-os.dev/schemas/cultural-framework.schema.json",
  "title": "Cortex-OS Cultural Framework Overlay",
  "type": "object",
  "required": ["id", "title", "region", "reference", "articles"],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "pattern": "^[a-z0-9-]+$" },
    "title": { "type": "string", "minLength": 5 },
    "region": { "type": "string", "minLength": 2 },
    "reference": {
      "type": "object",
      "required": ["citation", "url"],
      "additionalProperties": false,
      "properties": {
        "citation": { "type": "string", "minLength": 5 },
        "url": { "type": "string", "format": "uri" }
      }
    },
    "articles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["article", "summary", "principleAlignment"],
        "additionalProperties": false,
        "properties": {
          "article": { "type": "string", "minLength": 3 },
          "summary": { "type": "string", "minLength": 10 },
          "principleAlignment": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "pattern": "^[a-z0-9-]+$" }
          }
        }
      }
    }
  }
}
