{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cortex-os.dev/schemas/constitutional-principle.schema.json",
  "title": "Cortex-OS Constitutional Principles",
  "type": "object",
  "required": ["version", "principles"],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^v\\d{4}-\\d{2}-\\d{2}$"
    },
    "principles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "description", "validationCriteria"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z0-9-]+$" },
          "title": { "type": "string", "minLength": 3 },
          "description": { "type": "string", "minLength": 10 },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "validationCriteria": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "minLength": 5 }
          }
        }
      }
    }
  }
}
