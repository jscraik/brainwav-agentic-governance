{
	"version": "1.0.0",
	"allowedPaths": {
		"apps": ["cortex-os", "cortex-cli"],
		"packages": [
			"a2a",
			"agents",
			"mcp",
			"memories",
			"orchestration",
			"rag",
			"simlab"
		],
		"services": ["ml-inference", "data-pipeline"],
		"libs": ["typescript", "python"],
		"tools": [
			"structure-guard",
			"eslint-config",
			"lockfile-sync",
			"scripts",
			"schemas",
			"python"
		],
		"tests": ["simlab", "rag", "mcp", "a2a"],
		"infra": ["docker"]
	},
	"fileTypes": {
		"allowed": [
			"*.ts",
			"*.tsx",
			"*.js",
			"*.jsx",
			"*.json",
			"*.md",
			"*.yml",
			"*.yaml",
			"*.py",
			"*.pyi",
			"*.toml",
			"*.txt",
			"*.css",
			"*.scss",
			"*.html"
		],
		"blocked": ["*.log", "*.cache", "*.tmp", "*.sqlite", "*.db", "*.sqlite3"]
	},
	"sizeLimits": {
		"maxFileSize": "10MB",
		"maxTotalSize": "100MB"
	}
}
