{
	"$schema": "../schemas/policy.tools.schema.json",
	"tool": "sandbox",
	"actions": ["fs", "egress"],
	"rate": { "perMinute": 60 },
	"fsScope": ["apps/cortex-os/**/tmp/**"],
	"egress": {
		"http": { "allow": ["https://api.example.com", "https://*.yourdomain.tld"] }
	},
	"fs": { "writeAllow": ["apps/cortex-os/**/tmp/**"], "denyHidden": true }
}
