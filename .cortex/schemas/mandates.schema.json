{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"required": [
		"version",
		"requiredHeader",
		"requiredLine",
		"requiredSections",
		"forbiddenPhrases",
		"filesThatMustReferenceAgents"
	],
	"properties": {
		"version": { "type": "integer" },
		"requiredHeader": { "type": "string" },
		"requiredLine": { "type": "string" },
		"requiredSections": { "type": "array", "items": { "type": "string" } },
		"forbiddenPhrases": { "type": "array", "items": { "type": "string" } },
		"filesThatMustReferenceAgents": {
			"type": "array",
			"items": { "type": "string" }
		}
	}
}
